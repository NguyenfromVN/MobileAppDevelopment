<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <TextView
        android:textColor="@color/white"
        android:labelFor="@+id/txtName"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name" />

    <TextView
        android:padding="@dimen/fab_margin"
        android:background="@drawable/et_bg"
        android:id="@+id/txtName"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="@color/white"
        android:labelFor="@+id/txtContact"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact" />

    <TextView
        android:padding="@dimen/fab_margin"
        android:background="@drawable/et_bg"
        android:id="@+id/txtContact"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="@color/white"
        android:labelFor="@+id/txtAddress"
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address" />

    <TextView
        android:padding="@dimen/fab_margin"
        android:background="@drawable/et_bg"
        android:id="@+id/txtAddress"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="@color/white"
        android:labelFor="@+id/minCost"
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Min Cost" />

    <TextView
        android:padding="@dimen/fab_margin"
        android:background="@drawable/et_bg"
        android:id="@+id/minCost"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="@color/white"
        android:labelFor="@+id/maxCost"
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Max Cost" />

    <TextView
        android:padding="@dimen/fab_margin"
        android:background="@drawable/et_bg"
        android:id="@+id/maxCost"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textColor="@color/white"
        android:labelFor="@+id/service"
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service" />

    <TextView
        android:padding="@dimen/fab_margin"
        android:background="@drawable/et_bg"
        android:id="@+id/service"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>